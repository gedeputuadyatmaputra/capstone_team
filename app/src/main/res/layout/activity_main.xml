<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/logoexpresshand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.097" />


    <FrameLayout
        android:id="@+id/frame_btn"
        android:layout_width="89dp"
        android:layout_height="89dp"
        android:background="#c8c8c8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.257"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_wecom"
        app:layout_constraintVertical_bias="0.493">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/gambartangan1"
            android:scaleType="fitCenter" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameemoji_btn"
        android:layout_width="89dp"
        android:layout_height="89dp"
        android:background="#c8c8c8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_wecom"
        app:layout_constraintVertical_bias="0.493">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/emoji_ekspression"
            android:scaleType="fitCenter" />

    </FrameLayout>

    <TextView
        android:id="@+id/name_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowideregular"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="EXPRESS SIGN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        app:layout_constraintVertical_bias="0.052"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/desc_wecom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/latoregular"
        android:gravity="center"
        android:text="@string/desc_welcom"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_app"
        app:layout_constraintVertical_bias="0.111"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>